{
  "name": "firefox-send",
  "description": "File Sharing Experiment",
  "version": "1.0.4",
  "author": "Mozilla (https://mozilla.org)",
  "availableLanguages": [
    "az",
    "ca",
    "cs",
    "cy",
    "de",
    "dsb",
    "en-US",
    "es-ES",
    "es-MX",
    "fr",
    "fy-NL",
    "hsb",
    "hu",
    "id",
    "it",
    "ja",
    "kab",
    "ms",
    "nb-NO",
    "nl",
    "nn-NO",
    "pt-BR",
    "pt-PT",
    "ru",
    "sk",
    "sl",
    "sr",
    "sv-SE",
    "zh-CN",
    "zh-TW"
  ],
  "dependencies": {
    "aws-sdk": "^2.89.0",
    "body-parser": "^1.17.2",
    "bytes": "^2.5.0",
    "connect-busboy": "0.0.2",
    "convict": "^3.0.0",
    "express": "^4.15.3",
    "express-handlebars": "^3.0.0",
    "helmet": "^3.8.0",
    "mozlog": "^2.1.1",
    "raven": "^2.1.0",
    "redis": "^2.7.1"
  },
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-polyfill": "^6.23.0",
    "browserify": "^14.4.0",
    "css-mqpacker": "6.0.1",
    "cssnano-cli": "^1.0.5",
    "eslint": "^4.3.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-security": "^1.4.0",
    "git-rev-sync": "^1.9.1",
    "jquery": "^3.2.1",
    "jquery-circle-progress": "^1.2.2",
    "l20n": "^5.0.0",
    "mocha": "^3.4.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "proxyquire": "^1.8.0",
    "raven-js": "^3.17.0",
    "sass-lint": "^1.10.2",
    "selenium-webdriver": "^3.5.0",
    "sinon": "^2.3.8",
    "stylelint": "^8.0.0",
    "stylelint-config-standard": "^17.0.0",
    "supertest": "^3.0.0",
    "testpilot-ga": "^0.3.0",
    "uglifyify": "^4.0.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "homepage": "https://github.com/mozilla/send/",
  "license": "MPL-2.0",
  "repository": "mozilla/send",
  "scripts": {
    "build": "npm-run-all build:*",
    "build:css": "npm run css",
    "build:download": "browserify frontend/src/download.js -g uglifyify -o public/download.js",
    "build:upload": "browserify frontend/src/upload.js -g uglifyify -o public/upload.js",
    "build:vendor": "cp node_modules/babel-polyfill/dist/polyfill.min.js node_modules/l20n/dist/web/l20n.min.js public/vendor",
    "build:version": "node scripts/version",
    "contributors": "git shortlog -s -n | awk -F\\t '{print $2}' > CONTRIBUTORS",
    "css": "npm-run-all css:lint css:build css:autoprefixer css:mqpacker css:format css:minify # lint:css",
    "css:autoprefixer:": "autoprefixer-cli public/main.css",
    "css:build": "node-sass public/main.scss -o public --output-style=compact",
    "css:format": "prettier public/main.css --single-quote --write",
    "css:lint": "sass-lint -v",
    "css:minify": "# cssnano public/main.css public/main.css",
    "css:mqpacker": "mqpacker -s public/main.css > public/tmp.css && mv public/tmp.css public/main.css",
    "dev": "npm run build && npm start",
    "format": "prettier 'public/*.scss' --single-quote --write && npm run lint:js -- --fix",
    "get-prod-locales": "node scripts/get-prod-locales",
    "get-prod-locales:write": "npm run get-prod-locales -- --write",
    "lint": "npm-run-all lint:*",
    "lint-locales": "node scripts/lint-locales",
    "lint-locales:dev": "npm run lint-locales",
    "lint-locales:prod": "npm run lint-locales -- --production",
    "lint:css": "stylelint 'public/*.css'",
    "lint:js": "eslint .",
    "start": "node server/server",
    "test": "npm-run-all test:*",
    "test--browser": "browserify test/frontend/frontend.bundle.js -o test/frontend/bundle.js -d && node test/frontend/driver.js",
    "test:server": "mocha test/server",
    "test:unit": "mocha test/unit"
  }
}
