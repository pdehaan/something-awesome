{
  "name": "portal-alpha",
  "description": "P2P File Sharing Experiment",
  "version": "1.0.0",
  "author": "Mozilla (https://mozilla.org)",
  "dependencies": {
    "aws-sdk": "^2.62.0",
    "body-parser": "^1.17.2",
    "bytes": "^2.5.0",
    "color-convert": "^1.9.0",
    "connect-busboy": "0.0.2",
    "convict": "^3.0.0",
    "express": "^4.15.3",
    "express-handlebars": "^3.0.0",
    "fs-extra": "^3.0.1",
    "node-fetch": "^1.7.1",
    "path": "^0.12.7",
    "redis": "^2.7.1"
  },
  "devDependencies": {
    "browserify": "^14.4.0",
    "buffer-shims": "^1.0.0",
    "cross-env": "^5.0.0",
    "eslint": "3.19.0",
    "eslint-plugin-node": "5.0.0",
    "eslint-plugin-security": "1.3.0",
    "htmllint-cli": "0.0.6",
    "npm-run-all": "4.0.2",
    "prettier": "1.4.4",
    "stylelint": "7.10.1",
    "stylelint-config-standard": "16.0.0",
    "watchify": "^3.9.0"
  },
  "engines": {
    "node": ">=8"
  },
  "license": "MPL-2.0",
  "repository": "mozilla/something-awesome",
  "scripts": {
    "prewatch": "rm public/bundle.js",
    "watch": "watchify frontend/src/main.js -o public/bundle.js -d",
    "dev": "npm run watch | node server/portal_server.js",
    "format": "npm-run-all format:*",
    "format:css": "prettier 'public/*.css' --write",
    "format:js": "prettier 'frontend/src/*.js' 'server/*.js' --single-quote --write",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint 'public/*.css' --fix",
    "lint:html": "htmllint 'views/*.handlebars'",
    "lint:js": "eslint .",
    "start": "npm run watch | cross-env NODE_ENV=production node server/portal_server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
